<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.ProveedorEditPage"
             Title="Agregar/Editar Proveedor">

    <StackLayout Padding="10">
        <Label Text="Nombre" FontSize="Medium"/>
        <Entry Text="{Binding Nombre}" Placeholder="Nombre del proveedor"/>

        <Label Text="Teléfono" FontSize="Medium" Margin="0,10,0,0"/>
        <Entry Text="{Binding Telefono}" Placeholder="Teléfono del proveedor" Keyboard="Telephone"/>

        <Button Text="Actualizar" Clicked="OnSaveClicked" BackgroundColor="Aqua"/>
        <Button Text="Guardar" Margin="0,20,0,0" Clicked="OnSaveClicked" />
    </StackLayout>

</ContentPage>
